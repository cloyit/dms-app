<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.drive.mapper.PeachMapper">


    <resultMap id="BaseResultMap" type="com.example.drive.entity.Peach">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="address" jdbcType="INTEGER" property="address"/>
        <result column="list" jdbcType="DATE" property="list"/>
        <result column="pick" jdbcType="DATE" property="pick"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
    </resultMap>

    <select id="getPeachLimit" resultMap="BaseResultMap">
        SELECT * FROM peach LIMIT #{size} OFFSET #{begin};
    </select>

</mapper>
